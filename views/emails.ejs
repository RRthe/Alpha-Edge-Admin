    <!-- Bootstrap Modal for Adding/Editing Email Templates -->
    <!-- editEmailTemplateModal.ejs content -->
    <!-- Modal for Editing Email Templates -->
    <form id="editEmailTemplateForm" method="POST" action="/email-templates/update-template"></form>
    <div class="modal fade" id="editEmailTemplateModal" tabindex="-1" role="dialog"
        aria-labelledby="editEmailTemplateModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title" id="editEmailTemplateModalLabel">Edit Message Template</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!-- Modal Body -->
                <div class="modal-body">
                    <form id="editEmailTemplateForm">
                        <div class="form-group">
                            <label for="templateName">Name:</label>
                            <input type="text" class="form-control" id="templateName" name="name">
                        </div>
                        <div class="form-group">
                            <label for="templateSubject">Subject:</label>
                            <input type="text" class="form-control" id="templateSubject" name="subject">
                        </div>
                        <div class="form-group">
                            <label for="templateContent">Content:</label>
                            <textarea class="form-control" id="templateContent" name="content" rows="10"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    

    <!-- and so on for other templates -->

    <div id="emailTemplates"></div>   
    <!-- Add this script at the end of your body tag to handle the modal -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    
    <script>
        $(document).ready(function () {
            $('.edit-template-button').on('click', function () {
                var templateId = $(this).data('template-id');

                // AJAX request to fetch template content
                $.ajax({
                    url: '/email-templates/template-content/' + templateId,
                    method: 'GET',
                    success: function (response) {
                        $('#editEmailTemplateModal').find('.modal-body').html(response);
                        $('#editEmailTemplateModal').modal('show');
                    },
                    error: function (error) {
                        console.error('Error fetching template:', error);
                    }
                });
            });
        });
        async function fetchTemplateById(templateId) {
                try {
                    const response = await fetch(`/api/email-templates/${templateId}`);
                    if (!response.ok) {
                        throw new Error('Failed to fetch template');
                    }
                    const templateData = await response.json();
                    return templateData;
                } catch (error) {
                    console.error('Error fetching template:', error);
                }
            }
    </script>







    











      
       