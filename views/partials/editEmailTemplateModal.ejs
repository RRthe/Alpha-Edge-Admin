<!-- editEmailTemplateModal.ejs content -->
<div class="modal fade" id="editEmailTemplateModal" tabindex="-1" role="dialog"
    aria-labelledby="editEmailTemplateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editEmailTemplateModalLabel">Edit Message Template</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
            </div>
            <div class="modal-body">
                <form id="editEmailTemplateForm">
                    <div class="form-group">
                        <label for="templateName">Name:</label>
                        <input type="text" class="form-control" id="templateName" name="name"
                            placeholder="templateName">
                    </div>
                    <div class="form-group">
                        <label for="templateSubject">Subject:</label>
                        <input type="text" class="form-control" id="templateSubject" name="subject"
                            placeholder="templateSubject">
                    </div>
                    <div class="form-group">
                        <label for="templateContent">Content:</label>
                        <textarea class="form-control" id="templateContent" name="content" rows="5"
                            placeholder="Enter template content"></textarea>
                    </div>
                    <!-- Add other form fields as necessary -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>